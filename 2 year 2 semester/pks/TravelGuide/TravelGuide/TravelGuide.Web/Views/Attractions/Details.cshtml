@model AttractionDetailsViewModel
@{
    ViewData["Title"] = Model.Attraction.Name;
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1>@Model.Attraction.Name</h1>
        <p class="lead">
            <span class="badge badge-primary">г. @Model.Attraction.City.Name</span>
        </p>
    </div>
    <div class="col-md-4 text-right">
        <a asp-controller="Cities" asp-action="Details" asp-route-id="@Model.Attraction.CityId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Назад к городу
        </a>
    </div>
</div>

<div class="row mb-5">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">История и описание</h5>
                <p class="card-text">@Model.Attraction.Description</p>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h5>Часы работы</h5>
                        <p>@(string.IsNullOrEmpty(Model.Attraction.WorkingHours) ? "Информация отсутствует" : Model.Attraction.WorkingHours)</p>
                    </div>
                    <div class="col-md-6">
                        <h5>Стоимость посещения</h5>
                        <p>
                            @if (Model.Attraction.Price.HasValue)
                            {
                                <span>@Model.Attraction.Price.Value.ToString("C0") руб.</span>
                            }
                            else
                            {
                                <span>Бесплатно</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Фотография</h5>
            </div>
            <div class="card-body text-center p-0">
                <img src="@Model.Attraction.ImagePath" alt="@Model.Attraction.Name" class="img-fluid">
            </div>
        </div>
    </div>
</div>